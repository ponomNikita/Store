<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Интернет магазин детских кроваток</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/menu")
</head>
<body>
<div class="header">
    <div class="container" style="height: 100%">
        <div class="row" style="height: 100%;">
            <div class="col-lg-6 col-lg-offset-0
                         col-md-8 col-md-offset-0
                         col-sm-10 col-sm-offset-0
                         col-xs-12 col-xs-offset-0" style="height: 100%;">
                <img src="~/Content/images/logo.png" style="width: 100%;" />
            </div>
        </div>
        <div class="row" style="height: 100%;">
            <div class="headerText 
                 col-lg-5 col-lg-offset-1
                 col-md-7 col-md-offset-1
                 col-sm-9 col-sm-offset-1
                 col-xs-11 col-xs-offset-1" style="height: 100%;">
                <h1>Интернет магазин детских кроваток</h1>
            </div>
        </div>
    </div>
</div>
<div class="tabMenu">
    <div class="container">
        <div class="row">
            <div class="navigationBar 
                 col-lg-1 col-lg-offset-4
                 col-md-2 col-md-offset-2
                 col-sm-2 col-sm-offset-0
                 col-xs-4 col-xs-offset-0">
                <a class="barButton barButtonActive">Главная</a>
            </div>

            <div class="navigationBar 
                 col-lg-1 col-lg-offset-0
                 col-md-2 col-md-offset-0
                 col-sm-2 col-sm-offset-0
                 col-xs-4 col-xs-offset-0">
                <a class="barButton">Доставка</a>
            </div>

            <div class="navigationBar 
                 col-lg-1 col-lg-offset-0
                 col-md-2 col-md-offset-0
                 col-sm-2 col-sm-offset-0
                 col-xs-4 col-xs-offset-0">
                <a class="barButton">О нас</a>
            </div>

            <div class="navigationBar 
                 col-lg-1 col-lg-offset-0
                 col-md-2 col-md-offset-0
                 col-sm-2 col-sm-offset-0
                 col-xs-4 col-xs-offset-0">
                <a class="barButton">Контакты</a>
            </div>
        </div>
    </div>
</div>
<div class="underHeader">
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Ponomarev Nikita Studio</p>
        </footer>
    </div>
</div>

@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>
